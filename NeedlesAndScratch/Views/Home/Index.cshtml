@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div class="col-md-12">
        <section class="hero pb-3 bg-cover bg-center d-flex align-items-center">
            <img src="~/Content/Images/background (1).jpg" />
            <div class="container py-5">
                <div class="row px-4 px-lg-5">
                    <div class="col-lg-6">
                        <p class="text-muted small text-uppercase mb-2"></p>
                        <div class="btn btn-dark">@Html.ActionLink("Browse Collection", "Index", "Records")</div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- CATEGORIES SECTION-->
    <section class="pt-5">
        <header class="text-center">
            <p class="small text-muted small text-uppercase mb-1">Carefully created collections</p>
            <h2 class="h5 text-uppercase mb-4">Browse our categories</h2>
        </header>
        <div class="row">
            <div class="col-md-4 mb-4 mb-md-0">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/popResize.jpg" alt="">
                    <strong class="category-item-title">Pop</strong>
                </a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/rock.jpg" alt="">
                    <strong class="category-item-title">Rock</strong>
                </a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/alt.jpg" alt="">
                    <strong class="category-item-title">Alternative</strong>
                </a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0 col-md-offset-4">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/classicResize.jpg" alt="">
                    <strong class="category-item-title">Classic</strong>
                </a>
            </div>
        </div>
    </section>

    @* Services *@
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-4 mb-3 mb-lg-0">
                    <div class="d-inline-block">
                        <div class="media align-items-end">
                            <svg class="svg-icon svg-icon-big svg-icon-light">
                                <use xlink:href="#delivery-time-1"> </use>
                            </svg>
                            <div class="media-body text-left ml-3">
                                <h6 class="text-uppercase mb-1">Free shipping</h6>
                                <p class="text-small mb-0 text-muted">Free shipping worlwide</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 mb-3 mb-lg-0">
                    <div class="d-inline-block">
                        <div class="media align-items-end">
                            <svg class="svg-icon svg-icon-big svg-icon-light">
                                <use xlink:href="#helpline-24h-1"> </use>
                            </svg>
                            <div class="media-body text-left ml-3">
                                <h6 class="text-uppercase mb-1">24 x 7 service</h6>
                                <p class="text-small mb-0 text-muted">Free shipping worlwide</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-inline-block">
                        <div class="media align-items-end">
                            <svg class="svg-icon svg-icon-big svg-icon-light">
                                <use xlink:href="#label-tag-1"> </use>
                            </svg>
                            <div class="media-body text-left ml-3">
                                <h6 class="text-uppercase mb-1">Festival offer</h6>
                                <p class="text-small mb-0 text-muted">Free shipping worlwide</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>
