@{
    ViewBag.Title = "Home Page";
}


<div class="container">
    <div class="col-md-12">
        <section class="hero pb-3 bg-cover bg-center d-flex align-items-center">
            <img src="~/Content/Images/background (1).jpg" />
            <div class="container py-5">
                <div class="row px-4 px-lg-5">
                    <div class="col-lg-6">
                        <p class="text-muted small text-uppercase mb-2"></p>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <!-- CATEGORIES SECTION-->
    <section class="pt-5">
        <header class="text-center">
            <p class="small text-muted small text-uppercase mb-1">Carefully created collections</p>
            <h2 class="h5 text-uppercase mb-4">Browse our categories</h2>
        </header>
        <div class="row">
            <div class="col-md-4 mb-4 mb-md-0">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/popResize.jpg" alt="">
                    
                </a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/rock.jpg" alt="">
                    
                </a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/alt.jpg" alt="">
                    
                </a>
            </div>
            <div class="col-md-4 mb-4 mb-md-0 col-md-offset-4">
                <a class="category-item" href="">
                    <img class="img-fluid" src="~/Content/Images/classicResize.jpg" alt="">
                    
                </a>
            </div>
        </div>
            <div class="btn btn-dark text-center col-md-12">@Html.ActionLink("Browse Collection", "Index", "Records")</div>
    </section>
</div>
